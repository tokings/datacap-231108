                            </goals>
                        </execution>
                        <execution>
                            <phase>package</phase>
                            <id>attach-javadocs-dokka</id>
                            <goals>
                                <goal>javadocJar</goal>
                            </goals>
                        </execution>
                    </executions>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

